@page "/groups"
@inherits QuestionGroupsBase
@inject NavigationManager NavigationManager




<div class="container mt-3">
    @if (QuestionGroups == null)
    {
        <h3 class="text-center">Loading exams...</h3>
    }
    else
    {
        <div class="container">
            <div class="row">
                <div class="col">
                    <h4 class="text-center">Exams</h4>
                </div>
                <div class="col">
                    <h4 class="text-center">New</h4>
                </div>
                <div class="col">
                    <h4 class="text-center">Learn</h4>
                </div>
            </div>
            @foreach (var questionGroup in QuestionGroups)
            {
                <div class="row border-bottom">
                    <div class="col" @onclick="() => HandleGroupClick(questionGroup.Id)">
                        <h4>
                            @questionGroup.Title
                        </h4>
                    </div>
                    <div class="col">
                        
                    </div>
                    <div class="col">
                        
                    </div>
                </div>
            }
        </div>
    }
</div>


@code {


    private void HandleGroupClick(Guid questionGroupId)
    {
        NavigationManager.NavigateTo($"/questions/{questionGroupId}");
    }
}
